<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.carhouse.views.XEditLayout
        android:id="@+id/xet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:edit_left_text="文本"
        app:edit_text_left_margin="8dp"
        app:edit_text_right_margin="8dp"
        app:editText="@string/app_name"
        app:edit_color="@color/colorPrimary"
        app:edit_left_icon="@mipmap/ic_launcher"
        app:edit_left_width="35dp"
        app:edit_line_visible="true"
        app:edit_right_clear_width="35dp"
        app:edit_right_icon="@mipmap/ic_launcher"
        app:edit_right_two_icon="@mipmap/ic_launcher"
        app:edit_right_two_width="60dp"
        app:edit_right_width="35dp"
        app:editInputType="textPassword"
        app:edit_size="18dp" />

    <cn.carhouse.views.XEditLayout
        android:id="@+id/xet2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_hint="@string/app_name"
        app:editText="1234aaaa"
        app:editPassInputType="true"
        app:edit_line_visible="true" />

    <cn.carhouse.views.XEditLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_line_visible="true"
        app:edit_right_icon="@mipmap/ic_launcher" />

    <cn.carhouse.views.XEditLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>